<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ir.bitrate.monitor.HeartbeatGraph
        android:id="@+id/heartbeatGraph"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtHeartRate"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="BPM : 040 "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <SeekBar
            android:id="@+id/SeekBarHeartRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="190"
            android:progress="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtHeartRateCount"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="#1 "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <SeekBar
            android:id="@+id/SeekBarHeartRateCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:max="4" />
    </LinearLayout>

</LinearLayout>